<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:text="服务器地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_ip"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_radio_edit"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:text="    端口号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_prot"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:background="@drawable/edit_radio_edit"
            android:paddingLeft="10dp"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/teal_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/cmbkb_white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_btn_yes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bule_main_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/cmbkb_white"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>